    }
    .likes:hover {
    background: #03A9F4 !important;
    color: white !important;
    border-radius:5px;
    font-weight: bold;
    }
    .likes:link, .likes:visited {
    width: fit-content;
    padding: 0.5em 1em;
    text-align: center;
    float: inherit;
    margin: 0em auto;
    color: #ffffff;
    background: #00000026;
    border-radius:5px;
    }
    .unlike:hover {
    background: red !important;
    color: white !important;
    border-radius:5px;
